<?xml version="1.0" encoding="utf-8"?>
<project>
  <actions/>
  <description>This job clones a configuration&lt;!-- Managed by Jenkins Job Builder --&gt;</description>
  <keepDependencies>false</keepDependencies>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <concurrentBuild>false</concurrentBuild>
  <canRoam>true</canRoam>
  <properties>
    <hudson.model.ParametersDefinitionProperty>
      <parameterDefinitions>
        <hudson.model.StringParameterDefinition>
          <name>old_configuration</name>
          <description>Path to old machine configuration</description>
          <defaultValue>maxscale_test_old_configuration_path</defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>new_configuration</name>
          <description>Path to new machine configuration. It should be not existing directory</description>
          <defaultValue>maxscale_test_new_configuration_path</defaultValue>
        </hudson.model.StringParameterDefinition>
      </parameterDefinitions>
    </hudson.model.ParametersDefinitionProperty>
  </properties>
  <scm class="hudson.scm.NullSCM"/>
  <builders>
    <hudson.tasks.Shell>
      <command>cd &quot;$HOME/mdbci&quot;
./mdbci clone $old_configuration $new_configuration
./mdbci show network_config $new_configuration
</command>
    </hudson.tasks.Shell>
  </builders>
  <publishers/>
  <buildWrappers/>
</project>
